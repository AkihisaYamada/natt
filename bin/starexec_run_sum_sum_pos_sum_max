#!/bin/sh
DIR=${0%/*}
PATH=$DIR:$PATH
STR='<strategy>
  <edg/>
  <order>
    <template name="sum_sum_pos_sum_max">
      <entry range="pos">
        <sum>
          <args mode="sum">
            <sum>
              <prod>
                <var range="bool"/>
                <arg coord="0"/>
              </prod>
              <prod>
                <var range="bool"/>
                <arg coord="1"/>
              </prod>
            </sum>
          </args>
          <var range="pos"/>
        </sum>
      </entry>
      <entry range="pos">
        <case arity="0">
          <var range="pos"/>
        </case>
        <args mode="sum">
          <max>
            <prod>
              <var range="bool"/>
              <sum>
                <arg coord="0"/>
                <var range="pos"/>
              </sum>
            </prod>
            <prod>
              <var range="bool"/>
              <sum>
                <arg coord="1"/>
                <var range="pos"/>
              </sum>
            </prod>
          </max>
        </args>
      </entry>
    </template>
  </order>
</strategy>'
NaTT.exe -S:"$STR" "$1" 2> "$2/stderr.txt"
cat $2/stderr.txt
