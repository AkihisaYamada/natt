#!/bin/sh
DIR=${0%/*}
PATH=$DIR:$PATH
STR='<strategy>
  <edg/>
  <order>
    <template name="heuristic_neg">
      <entry range="pos">
        <case arity="0">
          <var range="pos"/>
        </case>
        <case arity="1">
          <max>
            <sum>
              <prod>
                <var range="bool"/>
                <arg coord="0"/>
              </prod>
              <var range="full"/>
            </sum>
            <const>0</const>
          </max>
        </case>
        <heuristic mode="maxsum">
          <max>
            <sum>
              <args mode="sum">
                <prod>
                  <var range="bool"/>
                  <arg coord="0"/>
                </prod>
              </args>
              <var range="full"/>
            </sum>
            <const>0</const>
          </max>
          <max>
            <args mode="max">
              <prod>
                <var range="bool"/>
                <sum>
                  <arg coord="0"/>
                  <var range="full"/>
                </sum>
              </prod>
            </args>
            <const>0</const>
          </max>
        </heuristic>
      </entry>
    </template>
  </order>
</strategy>'
NaTT.exe -S:"$STR" "$1" 2> "$2/stderr.txt"
cat $2/stderr.txt
